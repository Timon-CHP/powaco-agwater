<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NhapChiSoNuoc" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008000"
        android:text="Thông tin khách hàng"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:stretchColumns="*"
        >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical|left" >

            <TextView
                android:id="@+id/lbDANHSO"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="Danh số:" />

            <TextView
                android:id="@+id/txtDANHSO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

                 />            

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left" >

            <TextView
                android:id="@+id/lbKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên KH:" 
                />

            <TextView
                android:id="@+id/txtKH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:textSize="18sp"/>

        </TableRow>
        
        <TableRow android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical|left">
            
            <TextView
                android:id="@+id/lbCSCU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉ số đầu:" />

            <TextView
                android:id="@+id/tvCSCU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp" />
            
        </TableRow>
        <TableRow android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/lbCSMOI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉ số cuối:" />
            
            <EditText
                android:id="@+id/txtCSMOI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="30sp"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btGHI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu chỉ số" />

        </TableRow>
    </TableLayout>

</LinearLayout>